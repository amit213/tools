   # check if file exists
   is_file_present() {
     flag=0
     dbg_print "checking if file: $1 exists?"
     dbg_print "[${*}]"
     if [ -z "$1" ]
     then
       return $flag  #empty param.
     fi
     if [  -L $1 ] 
     then
        dbg_print "$1 is a link and was found."
        flag=1
     elif [[ -f $1 ]]
     then
        dbg_print "$1 is a file and was found."
        flag=1
     elif [[ -s $1 ]]
     then
        dbg_print "file $1 found."
     fi
     return $flag 
   }

   #wrapper over is file present
   file_present() {
     dbg_print "[${*}]"
     is_file_present $1
     if (( "$?" ))
      then
        return $_TRUE
