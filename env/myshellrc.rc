    termbintoken=$(printf $termbinurl | awk -F/ '{print $4}')
    dbg_print "\n termbinurl=$termbinurl \n termbintoken=$termbintoken"
    curl -s -X POST https://api.keyvalue.xyz/$keyvaluebucket/$onlineclipboardname/$termbintoken;
   }

